{
  "permissions": {
    "allow": [
      "Edit",
      "Read",
      "Write",
      "WebSearch",
      "Bash(mkdir:*)",
      "Bash(touch:*)",
      "Bash(ls:*)",
      "Bash(tree:*)",
      "Bash(mv:*)",
      "Bash(cp:*)",
      "Bash(cat:*)",
      "Bash(grep:*)",
      "Bash(find:*)",
      "Bash(echo:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(wc:*)",
      "Bash(pwd)",
      "Bash(which:*)",
      "Bash(xargs find)",
      "Bash(git status:*)",
      "Bash(git branch:*)",
      "Bash(git checkout:*)",
      "Bash(git log:*)",
      "Bash(git ls-tree:*)",
      "Bash(git diff:*)",
      "Bash(git fetch:*)",
      "Bash(git show:*)",
      "WebFetch(domain:developer.hashicorp.com)",
      "WebFetch(domain:cloud.google.com)",
      "WebFetch(domain:docs.google.com)"
    ],
    "ask": [
      "Bash(rm:*)",
      "Bash(chmod:*)",
      "Bash(curl:*)",
      "Bash(gcloud:*)",
      "Bash(kubectl:*)",
      "WebFetch"
    ]
  },
  "language": "japanese",
  "alwaysThinkingEnabled": true,
  "attribution": {
    "commit": "",
    "pr": ""
  },
  "enabledPlugins": {
    "gopls-lsp@claude-plugins-official": true
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.sh"
  }
}
